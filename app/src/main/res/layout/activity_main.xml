<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:id="@+id/auth_user_img"
                android:layout_height="200dp" />
            <TextView
                android:layout_width="match_parent"
                android:id="@+id/class_id_txt"
                android:textSize="20dp"
                android:textColor="#fff"
                android:textAlignment="center"
                android:padding="4dp"
                android:text="Gloria Adesanya group 1"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/myfirst"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@color/green"
                    android:layout_margin="15dp"
                    android:id="@+id/txt_green_health"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@color/yellow"
                    android:layout_margin="15dp"
                    android:id="@+id/txt_yellow_health"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:background="@color/colorAccent"
                    android:layout_margin="15dp"
                    android:id="@+id/txt_reds_health"
                    android:layout_height="wrap_content" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_margin="2dp"
                android:background="@color/colorAccent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textSize="35dp"
                    android:background="@drawable/myfirst"
                    android:textAlignment="center"
                    android:text="400"
                    android:padding="5dp"
                    android:id="@+id/checkin_sum_txt"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textSize="35dp"
                    android:background="@drawable/myfirst"
                    android:text="4000"
                    android:drawableTop="@drawable/ic_file_download_black_24dp"
                    android:textAlignment="center"
                    android:padding="5dp"
                    android:id="@+id/downloaded_sum_txt"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textSize="35dp"
                    android:text="400"
                    android:textAlignment="center"
                    android:background="@drawable/myfirst"
                    android:drawableTop="@drawable/ic_check_black_24dp"
                    android:padding="5dp"
                    android:id="@+id/attendance_sum_txt"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:textSize="35dp"
                    android:background="@drawable/myfirst"
                    android:text="400"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:id="@+id/toilet_sum_txt"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="300dp"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:background="@drawable/mysecond"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/capture"
                    android:layout_margin="1dp"
                    android:background="@color/colorAccent"
                    android:textColor="#fff"
                    android:text="Register"
                    android:padding="20dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/editeusers_main_btn"
                    android:layout_margin="1dp"

                    android:background="@color/colorAccent"
                    android:textColor="#fff"
                    android:text="Edit user"
                    android:padding="20dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/manageusers_main_btn"
                    android:layout_margin="1dp"
                    android:background="@color/colorAccent"
                    android:textColor="#fff"
                    android:text="CheckIN"
                    android:padding="20dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/mark_out_btn"
                    android:layout_margin="1dp"
                    android:background="@color/colorAccent"
                    android:textColor="#fff"
                    android:text="ChekOut"
                    android:padding="20dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/mark_toilet_btn"
                    android:layout_margin="1dp"
                    android:background="@color/colorAccent"
                    android:textColor="#fff"
                    android:text="Toilet"
                    android:padding="20dp"
                    android:layout_height="wrap_content" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_height="wrap_content">
                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/dattendancebtn"
                    android:background="@drawable/myfirst"
                    android:layout_weight="1"
                    android:layout_margin="0dp"
                    android:drawableLeft="@drawable/ic_refresh_black_24dp"
                    android:text="Update"
                    android:padding="15dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/transfers_btn"
                    android:background="@drawable/myfirst"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:text="----------"
                    android:padding="15dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_width="match_parent"
                    android:id="@+id/report"
                    android:background="@drawable/myfirst"
                    android:layout_margin="0dp"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_report_black_24dp"

                    android:text="report"
                    android:padding="15dp"
                    android:layout_height="wrap_content" />

            </LinearLayout>



        </LinearLayout>


    </ScrollView>



</LinearLayout>